<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_property_form" model="ir.ui.view">
        <field name="name">product.template.property.form</field>
        <field name="model">product.template.property</field>
        <field name="inherit_id" ref="multicompany_account.view_product_template_property_form"/>
        <field name="arch" type="xml">
            <field name="supplier_taxes_id" position="after">
                <field name="purchase_ok" invisible="1"/>
                <label string="" colspan="2"/>
                <field name="property_account_creditor_price_difference" domain="[('deprecated','=',False)]"
                       attrs="{'readonly':[('purchase_ok', '=', 0)]}"/>
            </field>
        </field>
    </record>

    <record id="view_product_account_purchase_ok_form" model="ir.ui.view">
        <field name="name">product.template.account.purchase.ok.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="purchase.view_product_account_purchase_ok_form"/>
        <field name="arch" type="xml">
            <field name="property_account_expense_id" position="replace">
                <field name="property_account_expense_id" domain="[('deprecated','=',False)]" readonly="1"
                       groups="account.group_account_user"/>
            </field>
            <field name='supplier_taxes_id' position="replace">
                <field name="supplier_taxes_id" colspan="2" widget="many2many_tags" readonly="1"/>
            </field>
        </field>
    </record>

    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.normal.form.inherit.stock</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="purchase.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="property_account_creditor_price_difference" position="replace">
                <field name="property_account_creditor_price_difference" domain="[('deprecated','=',False)]"
                       readonly="1"/>
            </field>
        </field>
    </record>
</odoo>