<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tax_adjustments_wizard" model="ir.ui.view">
        <field name="name">tax.adjustments.wizard.form</field>
        <field name="model">tax.adjustments.wizard</field>
        <field name="inherit_id" ref="account.tax_adjustments_wizard"/>
        <field name="arch" type="xml">
            <field name="journal_id" position="replace">
                <field name="company_id"/>
                <field name="journal_id" domain="[('type', '=', 'general'),('company_id','=',company_id)]"/>
            </field>
            <field name="tax_id" position="replace">
                <field name="tax_id" widget="selection" domain="[('type_tax_use', '=', 'none'), ('tax_adjustment', '=', True), ('company_id', '=', company_id)]"/>
            </field>

            <field name="debit_account_id" position="replace">
                <field name="debit_account_id" domain="[('deprecated', '=', False),('company_id','=',company_id)]"/>
            </field>
            <field name="credit_account_id" position="replace">
                <field name="credit_account_id" domain="[('deprecated', '=', False),('company_id','=',company_id)]"/>
            </field>
        </field>
    </record>
</odoo>
